;OriginalString : 
	PRINTFORMW 
	RETURN LOCAL
ENDIF

;────────────────────────────────────
;조교중止 ARG:1 ARG:2
;────────────────────────────────────
;CFLAG:소모 > 5もしくはCFLAG:MASTER:소모 > 5を条件として呼び出される箇所
;この条件から漏れた場合は통상の죠교開始구상が呼ばれる
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;疲労で죠교が中止になる場合
;記入チェック（0, 非表示、1, 表示）
LOCAL = 0
;━━━━━━━━━━━━━━━━━━━━━━━━
IF LOCAL && ARG > 0
	;=================================================
	;疲れているのは구상主(TARGET)
	;記入チェック
	LOCAL:1 = 0
	;=================================================
	IF LOCAL:1 && ARG == 1
;OriginalString : 
		PRINTFORMW 
		RETURN LOCAL:1
	ENDIF
	
	;=================================================
	;疲れているのは죠교대상(MASTER)
	;記入チェック
	LOCAL:1 = 0
	;=================================================
	IF LOCAL:1 && ARG == 2
;OriginalString : 
		PRINTFORMW 
		RETURN LOCAL:1
	ENDIF
ENDIF

