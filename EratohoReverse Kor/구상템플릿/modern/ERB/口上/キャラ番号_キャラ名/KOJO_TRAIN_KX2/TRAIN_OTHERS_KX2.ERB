	SETBIT すべて順に表示, 0
	SELECTCASE ARG:0
		;고통각인Lv2
		CASE 2
		;고통각인Lv9…[굳셈]がある場合、それを失う
		CASE 9
		;表示しない
		CASEELSE
			CLEARBIT すべて順に表示, 0
	ENDSELECT
	SIF GETBIT(すべて順に表示, 0) && 記入チェック == 1
